{
  "name": "yt-summary-api",
  "author": {
    "name": "Luis Hernández Martín",
    "email": "luisheratm@gmail.com"
  },
  "version": "1.0.0",
  "description": "API for the YouTube Summary App",
  "private": true,
  "type": "module",
  "scripts": {
    "prettify": "prettier -l --write \"**/*.ts\"",
    "dev": "tsx src/index.ts",
    "cli": "tsx src/index.ts --cli",
    "view": "node dist/src/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll --testMatch '**/tests/development/**/*.development.test.ts'",
    "test:prod": "cross-env TEST_ENV=production jest --config jest.config.prod.js --testMatch '**/tests/production/**/*.production.test.ts'",
    "test:all": "jest --testMatch '**/*.test.ts'",
    "lint": "eslint . --ext .ts",
    "start": "pm2 start ecosystem.config.cjs --no-daemon",
    "build": "tsc"
  },
  "keywords": [
    "youtube",
    "summary",
    "api"
  ],
  "dependencies": {
    "@distube/ytdl-core": "^4.15.9",
    "@types/body-parser": "^1.19.5",
    "cli-color": "^2.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.1",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^140.0.1",
    "helmet": "^7.1.0",
    "inquirer": "^12.0.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.7",
    "pm2": "^5.3.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.0.5",
    "webpack-node-externals": "^3.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.7.0",
    "@types/cli-color": "^2.0.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^18.19.64",
    "@types/supertest": "^6.0.2",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "declaration-bundler-webpack-plugin": "^1.0.3",
    "eslint": "^9.7.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "wepack-cli": "^0.0.1-security"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  }
}
