{
  "name": "video-to-summary-api",
  "author": {
    "name": "Luis Hernández Martín",
    "email": "luisheratm@gmail.com"
  },
  "version": "1.0.0",
  "description": "API for generating summaries from video content",
  "private": true,
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "prettify": "prettier -l --write \"**/*.ts\"",
    "dev": "cross-env NODE_OPTIONS=\"--experimental-specifier-resolution=node --loader ts-node/esm\" ts-node src/index.ts",
    "cli": "cross-env NODE_OPTIONS=\"--experimental-specifier-resolution=node --loader ts-node/esm\" ts-node src/index.ts --cli",
    "view": "node dist/index.js",

    "lint": "eslint . --ext .ts",
    "clean": "npx rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npx tsc-alias",
    "stop": "pm2 kill || true",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "restart": "npm run build && npm run start",
    "docker:build": "docker build -t youtube-summary-api .",
    "docker:run": "docker run -d -p 5050:5050 --name youtube-summary-api youtube-summary-api",
    "docker:stop": "docker stop youtube-summary-api && docker rm youtube-summary-api",
    "docker:logs": "docker logs -f youtube-summary-api",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:build": "docker-compose build",
    "docker:compose:restart": "docker-compose restart",
    "docker:cleanup": "docker system prune -f"
  },
  "keywords": [
    "youtube",
    "summary",
    "api"
  ],
  "dependencies": {
    "@azure/identity": "^4.6.0",
    "@azure/storage-blob": "^12.26.0",
    "@distube/ytdl-core": "^4.15.9",
    "@types/body-parser": "^1.19.5",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^9.0.7",
    "chalk": "^5.4.1",
    "cli-color": "^2.0.4",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.1",
    "ffmpeg-static": "^5.1.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^140.0.1",
    "helmet": "^7.1.0",
    "inquirer": "^12.0.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.7",
    "pm2": "^5.3.1",
    "uuid": "^11.0.5",
    "webpack-node-externals": "^3.0.0",
    "youtube-dl-exec": "^3.0.13",
    "ytdl-core": "^4.11.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.7.0",
    "@types/cli-color": "^2.0.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/helmet": "^4.0.0",

    "@types/node": "^18.19.76",
    "@types/supertest": "^6.0.2",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "declaration-bundler-webpack-plugin": "^1.0.3",
    "eslint": "^9.7.0",
    "globals": "^15.8.0",

    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",

    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.16.2",
    "typescript": "^5.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  }
}